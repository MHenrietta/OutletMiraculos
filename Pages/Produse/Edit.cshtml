@page
@model MagazinOnline.Pages.Produse.EditModel

@{
    ViewData["Title"] = "Editare";
}



<h4>Produs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Produs.ProdusId" />
            <div class="form-group">
                <label asp-for="Produs.Nume" class="control-label"></label>
                <input asp-for="Produs.Nume" class="form-control" />
                <span asp-validation-for="Produs.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produs.Descriere" class="control-label"></label>
                <input asp-for="Produs.Descriere" class="form-control" />
                <span asp-validation-for="Produs.Descriere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produs.CategorieId" class="control-label"></label>
                <select asp-for="Produs.CategorieId" class="form-control" asp-items="ViewBag.CategorieId"></select>
                <span asp-validation-for="Produs.CategorieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvare" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Inapoi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
