@page
@model MagazinOnline.Pages.Clienti.IndexModel

@{
    ViewData["Title"] = "Index";
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].ClientNume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].NumarTelefon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Client) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClientNume)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenume)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumarTelefon)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ClientId">Editare</a> |
                <a asp-page="./Details" asp-route-id="@item.ClientId">Detalii</a> |
                 
            </td>
        </tr>
}
    </tbody>
</table>
